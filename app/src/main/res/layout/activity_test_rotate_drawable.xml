<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/box_background"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@android:id/progress"
            android:src="@drawable/rotate_cd"
            android:background="@drawable/box_background"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@android:id/background"
            android:src="@drawable/rotate_handle"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center|bottom"
        android:padding="12dp" >

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@android:id/button1"
            android:src="@drawable/landscape_player_btn_pre_normal" />

        <ImageView
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:id="@android:id/button2"
            android:src="@drawable/landscape_player_btn_play_normal" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@android:id/button3"
            android:src="@drawable/landscape_player_btn_next_normal" />
    </LinearLayout>


</LinearLayout>