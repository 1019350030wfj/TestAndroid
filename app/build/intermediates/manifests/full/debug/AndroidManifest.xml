<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jayden.testandroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.SYSTEM_OVERLAY_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.jayden.testandroid.ndk.HelloNDKActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.jayden.testandroid.MainActivity" />
        <activity android:name="com.jayden.testandroid.api.xmlparser.ParserResultActivity" />
        <activity android:name="com.jayden.testandroid.lifecycle.BActivity" />
        <activity android:name="com.jayden.testandroid.customview.circlemenu.CCBActivity" />
        <activity android:name="com.jayden.testandroid.customview.circlemenu.CircleActivity" />
        <activity android:name="com.jayden.testandroid.lollipop.animation.OtherActivity" />

        <service android:name="com.jayden.testandroid.customview.floatview.TopFloatService" />

        <activity android:name="com.jayden.testandroid.lollipop.animation.ShareElementActivity" />

        <!-- 以下两个是测试从web启动app， 下面的mainActivity要作为应用的路口Activity -->
        <activity
            android:name="com.jayden.testandroid.weblauncher.WebIntentActivity"
            android:theme="@style/Theme.Transparent" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jayden.testandroid.video.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="testandroid.app"
                    android:pathPrefix="/openwith"
                    android:scheme="jayden" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jayden.testandroid.question.edittext.EdittextFocus"
            android:windowSoftInputMode="stateHidden" />
    </application>

</manifest>